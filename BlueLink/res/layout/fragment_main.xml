<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.palookaville.bluelink.MainActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onStopClick"
        android:text="stop"
        android:textSize="20sp" />

    <Button
        android:id="@+id/pair"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/stop"
        android:onClick="onPairClick"
        android:text="pair"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/runLink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pair"
        android:onClick="onRunLinkClick"
        android:text="Run Link"
        android:textSize="20sp" />
    
     <Button
        android:id="@+id/status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/runLink"
        android:onClick="onStatusClick"
        android:text="Check Status"
        android:textSize="20sp" />
        
     <Button
        android:id="@+id/send3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/status"
        android:onClick="onSend3Click"
        android:text="Send Message 3"
        android:textSize="20sp" />
        
     <Button
        android:id="@+id/send2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send3"
        android:onClick="onSend2Click"
        android:text="Send Message 2"
        android:textSize="20sp" />
        
     <Button
        android:id="@+id/send1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send2"
        android:onClick="onSend1Click"
        android:text="Send Message 1"
        android:textSize="20sp" />
        
     <Button
        android:id="@+id/test1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send1"
        android:onClick="onRunLinkClick"
        android:text="Test 1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/test1"
        android:autoText="false"
        android:gravity="center"
        android:text="init"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/outputView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/statusView"
        android:autoText="false"
        android:gravity="center"
        android:textSize="20sp" />

</RelativeLayout>